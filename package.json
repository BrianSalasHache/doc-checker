{
  "name": "doc-checker",
  "displayName": "Doc Checker",
  "description": "Missing and outdated docstrings checker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Doc Checker Configuration",
      "properties": {
        "doc-checker.class": {
          "type": "boolean",
          "default": true,
          "description": "Check that all classes have docstring."
        },
        "doc-checker.function": {
          "type": "boolean",
          "default": true,
          "description": "Check that all functions have docstring."
        },
        "doc-checker.method": {
          "type": "boolean",
          "default": true,
          "description": "Check that all methods have docstring."
        },
        "doc-checker.module": {
          "type": "boolean",
          "default": true,
          "description": "Check that all modules have docstring."
        },
        "doc-checker.parameter": {
          "type": "boolean",
          "default": true,
          "description": "Check that all functions and methods have updated parameters in their docstring."
        },
        "doc-checker.throw": {
          "type": "boolean",
          "default": true,
          "description": "Check that all functions and methods have updated throws in their docstring."
        },
        "doc-checker.return": {
          "type": "boolean",
          "default": true,
          "description": "Check that all functions and methods have updated returns in their docstring."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-python": "^0.23.2",
    "tree-sitter-typescript": "^0.23.0"
  }
}